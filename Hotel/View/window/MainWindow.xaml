<Window x:Class="HotelTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelTask"
        mc:Ignorable="d"
        Title="Бронирование гостиницы"
        WindowStartupLocation="CenterScreen"
        Height="650"
        Width="1100"
        MinHeight="600"
        MinWidth="1000"
        Background="#f8fafc"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Цветовая палитра -->
        <Color x:Key="PrimaryColor">#3B82F6</Color>
        <Color x:Key="PrimaryDarkColor">#2563EB</Color>
        <Color x:Key="PrimaryDarkerColor">#1D4ED8</Color>
        <Color x:Key="LightColor">#F8FAFC</Color>
        <Color x:Key="BorderColor">#E2E8F0</Color>
        <Color x:Key="TextColor">#1E293B</Color>
        <Color x:Key="TextSecondaryColor">#64748B</Color>

        <!-- Кисти -->
        <SolidColorBrush x:Key="PrimaryBrush"
                         Color="{StaticResource PrimaryColor}" />
        <SolidColorBrush x:Key="PrimaryDarkBrush"
                         Color="{StaticResource PrimaryDarkColor}" />
        <SolidColorBrush x:Key="PrimaryDarkerBrush"
                         Color="{StaticResource PrimaryDarkerColor}" />
        <SolidColorBrush x:Key="LightBrush"
                         Color="{StaticResource LightColor}" />
        <SolidColorBrush x:Key="BorderBrush"
                         Color="{StaticResource BorderColor}" />
        <SolidColorBrush x:Key="TextBrush"
                         Color="{StaticResource TextColor}" />
        <SolidColorBrush x:Key="TextSecondaryBrush"
                         Color="{StaticResource TextSecondaryColor}" />

        <!-- Эффект тени -->
        <DropShadowEffect x:Key="ShadowEffect"
                          BlurRadius="16"
                          ShadowDepth="0"
                          Color="#10000000"
                          Opacity="0.1" />

        <!-- Стиль для текста -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="{StaticResource TextBrush}" />
            <Setter Property="FontSize"
                    Value="14" />
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="PrimaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Padding"
                    Value="12,8" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Border x:Name="innerBorder"
                                        CornerRadius="6"
                                        Margin="2"
                                        Background="{StaticResource PrimaryDarkerBrush}"
                                        Opacity="0" />
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Margin="{TemplateBinding Padding}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="{StaticResource PrimaryDarkBrush}" />
                                <Setter TargetName="innerBorder"
                                        Property="Opacity"
                                        Value="0.2" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="{StaticResource PrimaryDarkerBrush}" />
                                <Setter TargetName="innerBorder"
                                        Property="Opacity"
                                        Value="0.3" />
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Background"
                                        Value="#E2E8F0" />
                                <Setter Property="Foreground"
                                        Value="#94A3B8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для карточек -->
        <Style x:Key="CardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="CornerRadius"
                    Value="8" />
            <Setter Property="Padding"
                    Value="16" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12"
                                      ShadowDepth="0"
                                      Color="#10000000"
                                      Opacity="0.08" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Навигационная панель -->
        <Border Grid.Row="0"
                Background="White"
                Padding="0,8"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,8">
                <Button Content="Список бронирований"
                        Width="200"
                        Height="42"
                        Margin="8,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Orders_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="#20000000"
                                          BlurRadius="8"
                                          ShadowDepth="2"
                                          Opacity="0.3" />
                    </Button.Effect>
                </Button>

                <Button Content="Новое бронирование"
                        Width="200"
                        Height="42"
                        Margin="8,0"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Create_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="#20000000"
                                          BlurRadius="8"
                                          ShadowDepth="2"
                                          Opacity="0.3" />
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <Border Grid.Row="1"
                Margin="16,12,16,16"
                Background="White"
                CornerRadius="8"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Effect="{StaticResource ShadowEffect}">
            <Frame x:Name="mainFrame"
                   NavigationUIVisibility="Hidden" />
        </Border>
    </Grid>
</Window>